# Entrypoint services configuration
# HTTP Controllers and Console Commands

services:
    # HTTP Controllers
    {{APP_NAMESPACE}}\Entrypoint\Http\Controllers\:
        resource: '../../src/Entrypoint/Http/Controllers/'
        tags: ['controller.service_arguments']
        public: false
        autowire: true
        autoconfigure: true

    # Console Commands
    {{APP_NAMESPACE}}\Entrypoint\Console\Commands\:
        resource: '../../src/Entrypoint/Console/Commands/'
        tags: ['console.command']
        public: false
        autowire: true
        autoconfigure: true